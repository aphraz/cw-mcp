# Required: Fernet encryption key for secure token storage
# Generate with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
ENCRYPTION_KEY=

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=500

# HTTP Configuration
HTTP_POOL_SIZE=500

# OAuth Browser Authentication
AUTH_BASE_URL=http://localhost:7000
AUTH_SESSION_TIMEOUT=300
AUTH_POLL_INTERVAL=1.0
AUTH_BROWSER_TIMEOUT=10

# Session Configuration
SESSION_CLEANUP_INTERVAL=600
SESSION_PENDING_TTL=300
SESSION_AUTHENTICATED_TTL=3600

# Authentication Rate Limiting
MAX_AUTH_ATTEMPTS_PER_SESSION=3
MAX_AUTH_ATTEMPTS_PER_IP=10
AUTH_LOCKOUT_DURATION=300

# API Rate Limiting
RATE_LIMIT_REQUESTS=90
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
# LOG_FILE=/path/to/logfile.log
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# Server Configuration
WORKERS=1
ACCESS_LOG=false
